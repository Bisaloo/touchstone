# API for touchstone package

## Exported functions

benchmark_ls(name)
benchmark_read(name, ref)
benchmark_run_iteration(expr_before_benchmark, ..., ref, n = 20)
benchmark_run_ref(refs = c(Sys.getenv("GITHUB_BASE_REF"), Sys.getenv("GITHUB_HEAD_REF")), expr_before_benchmark, ..., n = 20, path_pkg = ".", install_quick = TRUE, install_dependencies = FALSE)
benchmark_write(benchmark, name, ref, iteration = NA, append = TRUE)
benchmarks_analyse(refs = c(Sys.getenv("GITHUB_BASE_REF"), Sys.getenv("GITHUB_HEAD_REF")))
dir_touchstone()
touchstone_clear(all = FALSE)
use_touchstone()
